{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "app/build/",
    "sourceMap": true,
    "types": [
      "esprima",
      "estree",
      "glob",
      "handlebars",
      "html-to-text",
      "minimatch",
      "mustache",
      "node"
    ],
    "baseUrl": "./app",
    "lib": [
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "output/typings"
  ],
  "files": [
    "./app/src/app.ts",
    "./app/src/generator.ts",
    "./app/src/meta.ts"
  ]
}
